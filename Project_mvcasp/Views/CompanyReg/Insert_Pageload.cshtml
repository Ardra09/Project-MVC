@model Project_mvcasp.Models.CompanyInsert
@{
    ViewBag.Title = "Insert_Pageload";
}

<h2>Company Insertion</h2>
<div>
    @using (Html.BeginForm("InsertComp_Click", "CompanyReg", FormMethod.Post))
    {
        <div>
            <label>Name:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.name)
            @Html.ValidationMessageFor(m => m.name)
        </div>
        <div>
            <label>Email:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.email)
            @Html.ValidationMessageFor(m => m.email)
        </div>
        <div>
            <label>Phone:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.phone)
            @Html.ValidationMessageFor(m => m.phone)
        </div>
        <div>
            <label>Location:</label>
        </div>

        <div>
            @Html.TextBoxFor(m => m.location)
        </div>
        <div>
            <label>Website:</label>
        </div>

        <div>
            @Html.TextBoxFor(m => m.website)
        </div>
        <div>
            <label>User Name:</label>
        </div>

        <div>
            @Html.TextBoxFor(m => m.username)
        </div>
        <div>
            <label>Password:</label>
        </div>
        <div>
            @Html.PasswordFor(m => m.pwd)
        </div>
        <div>
            <label>Confirm Password:</label>
        </div>
        <div>
            @Html.PasswordFor(m => m.conpwd)
            @Html.ValidationMessageFor(m => m.conpwd)

        </div>
        <div>
            <input type="submit" value="Insert" />
            @Html.DisplayFor(m => m.adminmsg)
        </div>
    }
</div>


